{
  "name": "punkapi-site",
  "version": "1.0.0",
  "description": "The site/documentation source code for punkapi.com",
  "main": "index.js",
  "scripts": {
    "build": "postcss --config postcss.config.json",
    "dev": "npm-run-all --parallel 'build -- -w' 'dev-start'",
    "dev-start": "serve -p 3008 -i 'styles.css,postcss.config.json,package.json,README.md'",
    "start": "serve",
    "deploy": "npm run build & now -n punkapi-site",
    "alias": "now alias"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samjbmason/punkapi-site.git"
  },
  "author": "Sam Mason <sam.jbmason@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samjbmason/punkapi-site/issues"
  },
  "homepage": "https://github.com/samjbmason/punkapi-site#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "cssnano": "^3.8.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^8.2.0",
    "tachyons": "^4.5.6"
  },
  "dependencies": {
    "serve": "^3.3.1"
  },
  "now": {
    "alias": "punkapi.com"
  }
}
