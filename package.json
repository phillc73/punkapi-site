{
  "name": "punkapi-site",
  "version": "1.0.0",
  "description": "The site/documentation source code for punkapi.com",
  "main": "index.js",
  "scripts": {
    "build": "postcss --config postcss.config.json",
    "dev": "npm-run-all --parallel 'build -- -w' 'start -- --cache 0'",
    "start": "list ./build",
    "deploy": "npm run build & now ./build -n punkapi-site",
    "alias": "now alias"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samjbmason/punkapi-site.git"
  },
  "author": "Sam Mason <sam.jbmason@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samjbmason/punkapi-site/issues"
  },
  "homepage": "https://github.com/samjbmason/punkapi-site#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "cssnano": "^3.8.1",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^8.2.0",
    "tachyons": "^4.5.6"
  },
  "dependencies": {
    "list": "^0.8.2"
  },
  "now": {
    "alias": "punkapi.com"
  }
}
